{
  "name": "monzo-calendar-react",
  "version": "1.0.0",
  "description": "A calendar for your Monzo money (now in React)",
  "main": "index.js",
  "scripts": {
    "start": "parcel ./index.html",
    "lint": "npm run lint:prettier && npm run lint:js && npm run lint:scss",
    "lint:prettier": "npm run prettier -- -l 'src/**/*.{js,jsx}' || exit 0",
    "lint:scss": "stylelint \"**/*.scss\" --syntax scss",
    "prettier": "prettier --write"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx}": [
      "npm run prettier",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/robcrocombe/monzo-calendar-react.git"
  },
  "author": "Rob Crocombe <me@robcrocombe.com> (http://robcrocombe.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/robcrocombe/monzo-calendar-react/issues"
  },
  "homepage": "https://github.com/robcrocombe/monzo-calendar-react#readme",
  "dependencies": {
    "@types/react": "16.7.17",
    "@types/react-dom": "16.0.11",
    "autoprefixer": "8.0.0",
    "babel-polyfill": "6.26.0",
    "bulma": "0.7.2",
    "css-loader": "0.28.10",
    "gh-pages": "1.1.0",
    "moment": "2.22.2",
    "node-sass": "4.10.0",
    "parcel": "1.10.3",
    "postcss-modules": "1.4.1",
    "react": "16.6.3",
    "react-dom": "16.6.3",
    "react-redux": "6.0.0",
    "redux": "4.0.1",
    "typescript": "3.2.2"
  },
  "devDependencies": {
    "@babel/core": "7.2.2",
    "@babel/preset-react": "7.0.0",
    "husky": "1.2.0",
    "lint-staged": "8.1.0",
    "prettier": "1.15.3"
  },
  "browserslist": [
    "last 2 versions"
  ],
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "trailingComma": "es5"
  }
}
